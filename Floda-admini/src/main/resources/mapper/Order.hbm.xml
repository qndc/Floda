<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="pojo.Order" table="tb_order">
        <id name="order_id" column="order_id">
            <generator class="native"></generator>
        </id>
        <property name="user_id" column="user_id"/>
        <property name="addr_id" column="addr_id"/>
        <property name="order_money" column="order_money"/>
        <property name="creattime" column="creattime"/>
        <property name="type" column="type"/>
    </class>
</hibernate-mapping>