<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="pojo.Ecaluate" table="tb_ecaluate">
        <id name="ecal_id" column="ecal_id">
            <generator class="native"></generator>
        </id>
        <property name="product_id" column="product_id"/>
        <property name="order_id" column="order_id"/>
        <property name="user_id" column="user_id"/>
        <property name="ecal_content" column="ecal_content"/>
        <property name="ecal_time" column="ecal_time"/>
    </class>
</hibernate-mapping>