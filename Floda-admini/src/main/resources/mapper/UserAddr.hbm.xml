<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="pojo.UserAddr" table="tb_user_address">
        <id name="user_addr_id" column="user_addr_id">
            <generator class="native"/>
        </id>
        <property name="userId" column="userId"/>
        <property name="receiver_name" column="receiver_name"/>
        <property name="receiver_tel" column="receiver_tel"/>
        <property name="receiver_addr" column="receiver_addr"/>
        <property name="zip" column="zip"/>
    </class>
</hibernate-mapping>